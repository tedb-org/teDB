{
    "rootDir": "../",
    "globals": {
        "__TS_CONFIG__": "<rootDir>/spec/tsconfig.json"
    },
    "transformIgnorePatterns": [
        "<rootDir>/node_modules/(?!binary-type-tree)"
    ],
    "transform": {
        "^.+\\.(ts|js)$": "<rootDir>/spec/preprocessor.js"
    },
    "moduleDirectories": [
        "node_modules",
        "node_modules/@types"
    ],
    "collectCoverageFrom": [
        "src/**/*.ts"
    ],
    "unmockedModulePathPatterns": ["/node_modules/"],
    "testRegex": "(/^spec/.*|\\.(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
        "ts",
        "js"
    ]
}
